doctype
html
	head
		title="Log in"
		
		link(rel="stylesheet",
		     href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css", 
		     integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7", 
		     crossorigin="anonymous")

		link(rel="stylesheet",
		     href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css",
		     integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r",
		     crossorigin="anonymous")

		link(rel="stylesheet",
		     href="/style/main.css")

	body
		if (errorMessage)
			div= errorMessage
		h3 Log In
		form(action="/processLogin",
		  method="post",
		  class="form-verical")

			label(class="control-label col-md-1",for="username") Username:
			div(class="col-md-4 form-group")
				input(type="text",
				   id="username",
				   name="username",
				   placeholder="Username",
				   class="form-control")

			div(class="clearfix hidden-md-up")
		
			label(class="control-label col-md-1",for="password") Password:
			div(class="col-md-4 form-group")
				input(type="password",
				   id="password",
				   name="password",
				   placeholder="Password",
				   class="form-control")

			div(class="clearfix hidden-md-up")

			div(class="col-md-offset-1 col-md-1")
				button(type="submit",class="btn btn-primary") Log In
