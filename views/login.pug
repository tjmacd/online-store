extends layout
block content
	h3 Log In
	form(action="/login",
		  method="post",
		  class="form-vertical")
		label(class="control-label col-md-1",for="email") E-mail:
		div(class="col-md-4 form-group")
			input(type="text",
				   id="email",
				   name="email",
				   placeholder="E-mail Address",
				   class="form-control")

		div(class="clearfix hidden-md-up")
		
		label(class="control-label col-md-1",for="password") Password:
		div(class="col-md-4 form-group")
			input(type="password",
				   id="password",
				   name="password",
				   placeholder="Password",
				   class="form-control")

		div(class="clearfix hidden-md-up")

		div(class="col-md-offset-1 col-md-1")
			button(type="submit",class="btn btn-primary") Log In

		div(class="clearfix hidden-md-up")

		div(class="container") Don't have an account? 
			a(href="/register") Register now.
